        <TextView
            android:id="@+id/widget_view_query_mapquery_fielditem_txtValue"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:text="null" />

    </LinearLayout>

